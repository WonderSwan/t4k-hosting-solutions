sudo mkdir -p /etc/t4k-seedbox-install/ssl/CA
sudo chmod 777 /etc/t4k-seedbox-install/ssl/CA
cd /etc/t4k-seedbox-install/ssl/CA

IPADDRESS1=`cat /etc/t4k-seedbox-install/hostname.info`
NEWUSER1=`cat /etc/t4k-seedbox-install/mainuser.info`
SERVICENAME1=$1
SUBJ1="/C=US/ST=Denial/L=Springfield/O=Dis/CN=$IPADDRESS1/emailAddress=root@$NEWUSER1.com/OU=$NEWUSER1"
CERTPASS1=`cat /etc/t4k-seedbox-install/certpass.info`

sudo openssl genrsa 1024 | sudo tee /etc/t4k-seedbox-install/ssl/CA/$SERVICENAME1.key
sudo openssl req -new -x509 -nodes -sha1 -days 365 -key /etc/t4k-seedbox-install/ssl/CA/$SERVICENAME1.key -config /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf -batch -subj $SUBJ1 | sudo tee /etc/t4k-seedbox-install/ssl/CA/$SERVICENAME1.cert
sudo openssl ca -batch -keyfile /etc/t4k-seedbox-install/ssl/CA/private/cakey.pem -passin pass:$CERTPASS1 -subj $SUBJ1 -out /etc/t4k-seedbox-install/ssl/CA/$SERVICENAME1.pem -config /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf -passin pass:$CERTPASS1 -ss_cert /etc/t4k-seedbox-install/ssl/CA/$SERVICENAME1.cert
sudo cp /etc/t4k-seedbox-install/ssl/CA/$SERVICENAME1.* /etc/t4k-seedbox-install/ssl/
sudo chmod 600 /etc/t4k-seedbox-install/ssl/*
sudo chmod 644 /etc/t4k-seedbox-install/ssl/cert.pem
sudo chmod 644 /etc/t4k-seedbox-install/ssl/key.pem

##################### LAST LINE ###########
