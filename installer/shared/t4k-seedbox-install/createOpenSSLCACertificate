CERTPASS1=`cat /etc/t4k-seedbox-install/certpass.info`
IPADDRESS1=`cat /etc/t4k-seedbox-install/hostname.info`
NEWUSER1=`cat /etc/t4k-seedbox-install/mainuser.info`
cd /etc/t4k-seedbox-install/
rm -r /etc/t4k-seedbox-install/ssl/CA
mkdir -p /etc/t4k-seedbox-install/ssl/CA/newcerts
mkdir -p /etc/t4k-seedbox-install/ssl/CA/private
cd /etc/t4k-seedbox-install/ssl/CA

echo '01' > serial  && touch index.txt
cp /etc/t4k-seedbox-install/root.ca.cacert.conf.template /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf
perl -pi -e "s/<username>/$NEWUSER1/g" /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf
perl -pi -e "s/<servername>/$IPADDRESS1/g" /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf

openssl req -new -x509 -extensions v3_ca -keyout private/cakey.pem -passout pass:$CERTPASS1 -out cacert.pem -days 3650 -config /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf
openssl req -new -nodes -out /etc/t4k-seedbox-install/ssl/CA/req.pem -passout pass:$CERTPASS1 -config /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf
openssl ca -batch -out /etc/t4k-seedbox-install/ssl/CA/cert.pem -config /etc/t4k-seedbox-install/ssl/CA/caconfig.cnf -passin pass:$CERTPASS1 -infiles /etc/t4k-seedbox-install/ssl/CA/req.pem
mv /etc/t4k-seedbox-install/ssl/CA/cert.pem /etc/t4k-seedbox-install/ssl/CA/tmp.pem
openssl x509 -in /etc/t4k-seedbox-install/ssl/CA/tmp.pem -out /etc/t4k-seedbox-install/ssl/CA/cert.pem
cat /etc/t4k-seedbox-install/ssl/CA/key.pem /etc/t4k-seedbox-install/ssl/CA/cert.pem > /etc/t4k-seedbox-install/ssl/CA/key-cert.pem

cp /etc/t4k-seedbox-install/ssl/CA/cacert.pem /etc/t4k-seedbox-install/ssl
cp /etc/t4k-seedbox-install/ssl/CA/cert.pem /etc/t4k-seedbox-install/ssl
cp /etc/t4k-seedbox-install/ssl/CA/key-cert.pem /etc/t4k-seedbox-install/ssl
cp /etc/t4k-seedbox-install/ssl/CA/key.pem /etc/t4k-seedbox-install/ssl
cp /etc/t4k-seedbox-install/ssl/CA/private/cakey.pem /etc/t4k-seedbox-install/ssl
cp /etc/t4k-seedbox-install/ssl/CA/req.pem /etc/t4k-seedbox-install/ssl

bash /etc/t4k-seedbox-install/createOpenSSLServiceCertificate sabnzbd

chmod 600 /etc/t4k-seedbox-install/ssl/*
chmod 644 /etc/t4k-seedbox-install/ssl/cert.pem
chmod 644 /etc/t4k-seedbox-install/ssl/key.pem

##################### LAST LINE ###########
